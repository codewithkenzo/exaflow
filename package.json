{
  "name": "exaflow",
  "version": "2.0.0",
  "description": "ExaFlow: Advanced Semantic Search Tool with MCP Server Integration",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "exaflow": "dist/cli.js",
    "exaflow-mcp": "dist/mcp-server.js"
  },
  "private": false,
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun --minify && bun build src/cli.ts --outdir dist --target bun --minify && bun build src/mcp-server.ts --outdir dist --target bun --minify",
    "dev": "bunx tsx src/cli.ts",
    "dev:mcp": "bunx tsx src/mcp-server.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit",
    "lint": "bunx tsc --noEmit && bun test",
    "clean": "rm -rf dist",
    "cleanup": "node scripts/cleanup.js",
    "cleanup:history": "node scripts/cleanup.js --history",
    "start": "bun run dist/cli.js",
    "start:mcp": "bun run dist/mcp-server.js"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^24.7.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.0",
    "commander": "^14.0.1",
    "ws": "^8.18.3",
    "zod": "^4.1.12"
  },
  "keywords": [
    "exa",
    "exaflow",
    "search",
    "semantic",
    "mcp",
    "context",
    "research",
    "websets",
    "cli",
    "typescript"
  ],
  "author": "ExaFlow",
  "license": "MIT"
}
