{
  "name": "exaflow",
  "version": "2.0.0",
  "description": "ExaFlow: Advanced Semantic Search Tool with MCP Server Integration",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "exaflow": "dist/cli.js",
    "exaflow-mcp": "dist/mcp-server.js"
  },
  "private": false,
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun && bun build src/cli.ts --outdir dist --target bun && bun build src/mcp-server.ts --outdir dist --target bun",
    "dev": "bunx tsx src/cli.ts",
    "dev:mcp": "bunx tsx src/mcp-server.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:unit": "bun test tests/unit/",
    "test:integration": "bun test tests/integration/",
    "test:e2e": "bun test tests/e2e/",
    "test:ci": "bun test --coverage --bail",
    "test:performance": "bun test tests/performance/",
    "test:perf:cache": "bun test tests/performance/http-cache.performance.test.ts",
    "test:perf:benchmark": "bun test tests/performance/ --reporter=verbose",
    "typecheck": "tsc --noEmit",
    "lint": "bunx tsc --noEmit && bun test",
    "format": "bunx prettier --write \"src/**/*.{ts,js}\" \"tests/**/*.{ts,js}\"",
    "format:check": "bunx prettier --check \"src/**/*.{ts,js}\" \"tests/**/*.{ts,js}\"",
    "clean": "rm -rf dist coverage",
    "cleanup": "node scripts/cleanup.js",
    "cleanup:history": "node scripts/cleanup.js --history",
    "start": "bun run dist/cli.js",
    "start:mcp": "bun run dist/mcp-server.js",
    "precommit": "bun run typecheck && bun run lint && bun run test:ci"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^24.7.1",
    "prettier": "^3.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.0",
    "commander": "^14.0.1",
    "ws": "^8.18.3",
    "zod": "^3.25.8"
  },
  "keywords": [
    "exa",
    "exaflow",
    "search",
    "semantic",
    "mcp",
    "context",
    "research",
    "websets",
    "cli",
    "typescript"
  ],
  "author": "ExaFlow",
  "license": "MIT"
}
