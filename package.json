{
  "name": "@codewithkenzo/exaflow",
  "version": "2.2.1",
  "description": "ðŸš€ Advanced semantic search & AI integration toolkit with Exa API and MCP server support",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "exaflow": "dist/cli.js",
    "exaflow-mcp": "dist/mcp-server.js"
  },
  "private": false,
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun && bun build src/cli.ts --outdir dist --target bun && bun build src/mcp-server.ts --outdir dist --target bun",
    "dev": "bunx tsx src/cli.ts",
    "dev:mcp": "bunx tsx src/mcp-server.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:unit": "bun test tests/unit/",
    "test:integration": "bun test tests/integration/",
    "test:e2e": "bun test tests/e2e/",
    "test:workflows": "bun test tests/e2e/workflow-tests.test.ts",
    "test:integration:cli": "bun test tests/integration/cli-integration.test.ts",
    "test:integration:mcp": "bun test tests/integration/mcp-server-integration.test.ts",
    "test:ci": "bun test --coverage --bail",
    "test:performance": "bun test tests/performance/",
    "test:perf:cache": "bun test tests/performance/http-cache.performance.test.ts",
    "test:perf:memory": "bun test tests/performance/memory-leak.test.ts",
    "test:perf:network": "bun test tests/performance/network-stress.test.ts",
    "test:perf:benchmark": "bun test tests/performance/ --reporter=verbose",
    "test:security": "bun test tests/security/",
    "test:security:input": "bun test tests/security/input-validation.test.ts",
    "test:security:basic": "bun test tests/security/security.test.ts",
    "test:cross-platform": "bun test tests/cross-platform/",
    "test:advanced": "bun test tests/security/ tests/performance/memory-leak.test.ts tests/performance/network-stress.test.ts tests/cross-platform/",
    "test:all": "bun test tests/unit/ tests/integration/ tests/e2e/ tests/security/ tests/performance/ tests/cross-platform/",
    "typecheck": "tsc --noEmit",
    "lint": "bunx tsc --noEmit && bun test",
    "format": "bunx prettier --write \"src/**/*.{ts,js}\" \"tests/**/*.{ts,js}\"",
    "format:check": "bunx prettier --check \"src/**/*.{ts,js}\" \"tests/**/*.{ts,js}\"",
    "clean": "rm -rf dist coverage",
    "start": "bun run dist/cli.js",
    "start:mcp": "bun run dist/mcp-server.js",
    "precommit": "bun run typecheck && bun run lint && bun run test:ci"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^24.7.1",
    "prettier": "^3.0.0",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.0",
    "commander": "^14.0.1",
    "undici": "^7.19.2",
    "ws": "^8.18.3",
    "zod": "^3.25.8"
  },
  "keywords": [
    "exa",
    "exaflow",
    "search",
    "semantic",
    "neural",
    "mcp",
    "context",
    "research",
    "websets",
    "cli",
    "typescript",
    "ai",
    "llm",
    "content-extraction",
    "api-client"
  ],
  "author": {
    "name": "ExaFlow",
    "email": "support@exaflow.dev",
    "url": "https://github.com/codewithkenzo/exaflow"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/codewithkenzo/exaflow.git"
  },
  "bugs": {
    "url": "https://github.com/codewithkenzo/exaflow/issues"
  },
  "homepage": "https://github.com/codewithkenzo/exaflow#readme",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}
